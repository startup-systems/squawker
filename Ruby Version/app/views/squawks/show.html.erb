<div class="squawk">
  <p class="author"><%= @squawk.author %></p>
  <p class="content"><%= @squawk.content %></p>
  <p>
    <% if @squawk.image_url != "" %>
      <img class="image" src="<%= @squawk.image_url %>">
    <% end %>
  </p>
  <a href="/squawks/<%= @squawk.id %>/edit">Edit</a>
  <form action="/squawks/<%= @squawk.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <div class="form-field">
      <button class="danger">Delete</button>
    </div>
  </form>
</div>
